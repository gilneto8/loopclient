{
  "include": ["_graphql-generated_/typescript/**/*", "type-declarations/**/*", "src/**/*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@danmarshall/deckgl-typings"],
    "paths": {
      "@config/*": ["__config.debug/*"],
      "@ui/*": ["src/components/ui/*"],
      "@logic/*": ["src/logic/*"],
      "@templates/*": ["src/templates/*"],
      "@utils/*": ["src/utils/*"],
      "@routing/*": ["src/components/routing/*"]
    },
    "noEmit": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "isolatedModules": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "outDir": "./ts-build/",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "newLine": "crlf"
  }
}
